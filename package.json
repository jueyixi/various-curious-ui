{
	"name": "various-curious-components",
	"version": "1.0.0",
	"description": "一个适用于vue3项目的组件库。",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "vite dev",
		"docs:dev": "vitepress dev vitepress",
		"docs:build": "vitepress build vitepress",
		"docs:preview": "vitepress preview vitepress --port 4174",
		"deploy": "bash deploy.sh",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"prepare": "husky install",
		"lint-staged": "lint-staged",
		"commitlint": "commitlint --config commitlint.config.cjs -e -V",
		"preinstall": "node ./scripts/preinstall.js",
		"format": "prettier --write ."
	},
	"keywords": [
		"vue",
		"vue3",
		"vite",
		"vc",
		"vc-ui",
		"ui"
	],
	"author": "jueyixi",
	"license": "ISC",
	"workspaces": [
		"packages/*",
		"docs"
	],
	"devDependencies": {
		"@commitlint/cli": "^17.8.0",
		"@commitlint/config-conventional": "^17.8.0",
		"@rushstack/eslint-patch": "^1.5.1",
		"@types/node": "^20.9.0",
		"@vitejs/plugin-vue": "^4.4.1",
		"@vitejs/plugin-vue-jsx": "^3.0.2",
		"@vue/eslint-config-typescript": "^12.0.0",
		"eslint": "^8.57.0",
		"eslint-plugin-vue": "^9.17.0",
		"husky": "^8.0.3",
		"less": "^4.2.0",
		"less-loader": "^11.1.3",
		"lint-staged": "^15.0.2",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2",
		"unplugin-vue-markdown": "^0.26.2",
		"vite": "^4.4.11",
		"vite-plugin-dts": "1.4.1",
		"vitepress": "^1.2.3",
		"vitepress-theme-demoblock": "^3.0.7",
		"vue-router": "^4.2.4",
		"vue-tsc": "^1.8.22"
	},
	"dependencies": {
		"@floating-ui/vue": "^1.0.6",
		"@various-curious-ui/icons": "workspace:^",
		"@various-curious-ui/typings": "workspace:^",
		"@vueuse/core": "^10.9.0",
		"dayjs": "^1.11.10",
		"various-curious-ui": "workspace:^",
		"vc-hooks": "workspace:^",
		"vc-utils": "workspace:^",
		"vue": "^3.3.4"
	},
	"lint-staged": {
		"*.ts": "eslint --fix"
	}
}