{
	"include": [
		"/env.d.ts",
		"/src/**/*",
		"/src/**/*.ts",
		"/src/**/*.vue",
		"/src/**/**/*.vue",
		"./examples/**/*.vue",
		"./examples/**/*.ts",
		"packages/components/style/plugin/index.js"
	],
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es6"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"types": ["vite/client"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*", "./packages/*", "./examples/*"]
		}
	}
}
