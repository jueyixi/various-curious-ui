{
	"include": [
		"/env.d.ts",
		"/src/**/*",
		"/src/**/*.ts",
		"/src/**/*.vue",
		"/src/**/**/*.vue",
		"./examples/**/*.vue",
		"./examples/**/*.ts",
		"packages/components/style/plugin/index.js"
	],
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "Node",

		"types": ["vite/client", "./packages/typings/components.d.ts"],
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*", "./packages/*", "./examples/*"]
		}
	}
}
